#!/bin/sh

sbblock=47

asktoend() {
	response=$(printf "No\\nYes" | dmenu -c -i -l 2 -p "Stop timer?")
	[ "$response" = "Yes" ] && rm -f ~/.cache/pomodoro && kill -$sbblock "$(pidof $STATUSBAR)" && killall "pomodoro"
	exit
}

[ -f "${XDG_CACHE_HOME-~/.cache}/pomodoro" ] && asktoend

err() { echo "Usage:
	pomodoro [OPTIONS]
Options:
	-w: worktime
	-b: breaktime
	-l: longbreaks
The longer breaks are always 4x normal breaks if not set." && exit 1 ;}

while getopts "w:b:l:" o; do case "${o}" in
	w) work="${OPTARG}" ;;
	b) breaktime="${OPTARG}" ;;
	l) longbreak="${OPTARG}" ;;
	*) printf "Invalid option: -%s\\n" "$OPTARG" && err ;;
esac done

[ -z "$work" ] && work=20
[ -z "$breaktime" ] && breaktime=5
[ -z "$longbreak" ] && longbreak="$(($breaktime*4))"

# TODO: use for loops or something?
while :; do
	paplay /usr/share/sounds/freedesktop/stereo/complete.oga &
	notify-send "ðŸ… Work - "$work"m"
	echo "ðŸ… Work - "$work"m" > ~/.cache/pomodoro
	kill -$sbblock "$(pidof $STATUSBAR)"

	sleep "$work"m

	paplay /usr/share/sounds/freedesktop/stereo/complete.oga &
	notify-send "ðŸ… Break - "$breaktime"m"
	echo "ðŸ… Break - "$breaktime"m" > ~/.cache/pomodoro
	kill -$sbblock "$(pidof $STATUSBAR)"

	sleep "$breaktime"m

	paplay /usr/share/sounds/freedesktop/stereo/complete.oga &
	notify-send "ðŸ… Work - "$work"m"
	echo "ðŸ… Work - $work m" > ~/.cache/pomodoro
	kill -$sbblock "$(pidof $STATUSBAR)"

	sleep "$work"m

	paplay /usr/share/sounds/freedesktop/stereo/complete.oga &
	notify-send "ðŸ… Break - "$breaktime"m"
	echo "ðŸ… Break - "$breaktime"m" > ~/.cache/pomodoro
	kill -$sbblock "$(pidof $STATUSBAR)"

	sleep "$breaktime"m

	paplay /usr/share/sounds/freedesktop/stereo/complete.oga &
	notify-send "ðŸ… Work - "$work"m"
	echo "ðŸ… Work - "$work"m" > ~/.cache/pomodoro
	kill -$sbblock "$(pidof $STATUSBAR)"

	sleep "$work"m

	paplay /usr/share/sounds/freedesktop/stereo/complete.oga &
	notify-send "ðŸ… Break - "$breaktime"m"
	echo "ðŸ… Break - "$breaktime"m" > ~/.cache/pomodoro
	kill -$sbblock "$(pidof $STATUSBAR)"

	sleep "$breaktime"m

	paplay /usr/share/sounds/freedesktop/stereo/complete.oga &
	notify-send "ðŸ… Work - "$work"m"
	echo "ðŸ… Work - "$work"m" > ~/.cache/pomodoro
	kill -$sbblock "$(pidof $STATUSBAR)"

	sleep "$work"m

	paplay /usr/share/sounds/freedesktop/stereo/complete.oga &
	notify-send "ðŸ˜Œ Long Break - "$longbreak"m"
	echo "ðŸ˜Œ Long Break - "$longbreak"m" > ~/.cache/pomodoro
	kill -$sbblock "$(pidof $STATUSBAR)"

	sleep "$longbreak"m
done
